            if (Session["clientesDefault_Usuario"] != null && ((DKintranet.Codigo.capaDatos.Usuario)Session["clientesDefault_Usuario"]).idRol == DKintranet.Codigo.clases.Constantes.cROL_ENCSUCURSAL)
            {
                <p class="TitleCliente">Seleccione un cliente</p>
                string IdSuc;

                IdSuc = ((DKintranet.Codigo.capaDatos.Usuario)Session["clientesDefault_Usuario"]).NombreYApellido.Substring(9, 2);

                List<DKbase.web.capaDatos.cClientes> colClientes = WebService.RecuperarTodosClientesBySucursal(IdSuc);
                <select class="form-control cmbCliente" id="cmbCliente" name="cmdCliente">
                    @{
